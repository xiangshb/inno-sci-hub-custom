---
import { Head } from "../components/Head";
import AppRouter from "../components/StaticRouter";
import "../styles/global.css";

// Basic SEO meta tags for static deployment
const pageTitle = 'InnoSciHub - Scientific Discovery Platform';
const pageDescription = 'A comprehensive platform for scientific research, insights, tools, and collaboration';
const pageUrl = Astro.url.href;

// For static builds, we need to provide getStaticPaths
export async function getStaticPaths() {
  return [
    { params: { slug: ['insights'] } },
    { params: { slug: ['research-plans'] } },
    { params: { slug: ['agents'] } },
    { params: { slug: ['tools'] } },
    { params: { slug: ['knowledge'] } },
    { params: { slug: ['visualizations'] } }
  ];
}
---

<html lang="en" class="w-full h-full">
  <head>
    <Head />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription}>
    <meta property="og:title" content={pageTitle}>
    <meta property="og:description" content={pageDescription}>
    <meta property="og:url" content={pageUrl}>
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={pageTitle}>
    <meta name="twitter:description" content={pageDescription}>
    <link rel="canonical" href={pageUrl}>
  </head>
  <body class="w-full h-full">
    <div id="root" class="w-full h-full">
      <AppRouter client:only="react" />
    </div>
  </body>
</html>
